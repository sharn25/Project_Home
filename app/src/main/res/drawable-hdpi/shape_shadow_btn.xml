<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <gradient
                        android:gradientRadius="150"
                        android:centerX="50%"
                        android:centerY="50%"
                        android:startColor="#1da4e8"
                        android:endColor="#1287f1"
                        android:type="radial"
                        />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#66000000" />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="4dp" android:right="4dp">
                <shape>
                    <gradient
                        android:gradientRadius="150"
                        android:centerX="50%"
                        android:centerY="50%"
                        android:startColor="#1da4e8"
                        android:endColor="#1287f1"
                        android:type="radial"
                        />
                    <corners android:radius="5dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>