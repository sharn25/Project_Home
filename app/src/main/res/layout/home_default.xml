<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:amazon="http://schemas.amazon.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/weatheriv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBottom="@+id/temptv"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/weatherrefresh2"
        />

    <TextView
        android:id="@+id/temptv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="bottom"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/weatheriv"
        android:layout_toRightOf="@+id/weatheriv"
        android:layout_weight="0"
        android:text="--\u2103"
        android:textColor="@android:color/white"

        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/digitalClocktv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temptv"
        android:layout_centerHorizontal="true"
        android:text="10:12"
        android:textColor="@android:color/white"
        android:textSize="150sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/datetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/digitalClocktv"
        android:layout_centerHorizontal="true"

        android:includeFontPadding="false"
        android:text="SAT, SEP 14"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ProgressBar
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:visibility="gone"
        android:id="@+id/bgload"
        android:layout_alignParentRight="true"
         />
</RelativeLayout>
